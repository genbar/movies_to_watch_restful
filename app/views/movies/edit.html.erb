<h1>Editing Movie #<%= @movie.id %></h1>

<!-- <form action="http://localhost:3000/update_movie/<%= @movie.id %>"> -->
<%= form_tag "http://localhost:3000/movies/#{@movie.id}", :method => "patch" do %>
  <div>
    <label for="title">Title</label>
    <input name="title" type="text" id="title" value="<%= @movie.title %>" placeholder="Title">
  </div>

  <div>
    <label for="year">Year</label>
    <input name="year" type="text" id="year" value="<%= @movie.year %>" placeholder="Year">
  </div>

  <div>
    <label for="duration">Duration</label>
    <input name="duration" type="text" id="duration" value="<%= @movie.duration %>" placeholder="Duration">
  </div>

  <div>
    <label for="description">Description</label>
    <textarea name="description" id="description"><%= @movie.description %></textarea>
  </div>

  <div>
    <label for="image_url">Image URL</label>
    <input name="image_url" type="text" id="image_url" value="<%= @movie.image_url %>" placeholder="Image URL">
  </div>


  <div>
    <label for="director">Director</label>
    <input name="director" type="text" id="director" value="<%= @movie.director %>" placeholder="Director">
  </div>

  <div>
    <input type="submit" value="Update Movie">
    or <a href="index.html">Cancel</a>
  </div>
<% end %>
<!-- </form> -->
