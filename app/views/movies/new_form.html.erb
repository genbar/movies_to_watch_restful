<h1>Add A New Movie</h1>

<form action="http://localhost:3000/create_movie">
  <div>
    <label for="title">Title</label>
    <input name="title" type="text" id="title" placeholder="Title">
  </div>

  <div>
    <label for="year">Year</label>
    <input name="year" type="text" id="year" placeholder="Year">
  </div>

  <div>
    <label for="duration">Duration</label>
    <input name="duration" type="text" id="duration" placeholder="Duration">
  </div>

  <div>
    <label for="description">Description</label>
    <textarea name="description" id="description"></textarea>
  </div>

  <div>
    <label for="image_url">Image URL</label>
    <input name="image_url" type="text" id="image_url" placeholder="Image URL">
  </div>

  <div>
    <input type="submit" value="Create Movie">
    or <a href="index.html">Cancel</a>
  </div>
</form>
